    "body-parser": "^1.19.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.1.0",
    "express": "^4.17.3",
    "express-fileupload": "^1.1.6-alpha.5",
    "express-session": "^1.16.2",
    "express-status-monitor": "^1.2.6",
    "http-status": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.6.12",
    "mongoose-autopopulate": "^0.9.1",
    "mongoose-delete": "^0.5.1",
    "mongoose-paginate": "^5.0.3",
    "mongoose-timestamp": "^0.6.0",
